{
  "name": "@wcom/events",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Rahim Alwer <rahim_alwer@hotmail.com>",
  "description": "Event decorators and helpers for web components.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "@types/",
  "homepage": "https://github.com/wcom-js/events",
  "bugs": {
    "url": "https://github.com/wcom-js/events/issues"
  },
  "files": [
    "dist/",
    "@types/"
  ],
  "scripts": {
    "build": "rimraf dist && rimraf @types && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "release": "npx semantic-release --branches main",
    "test": "wtr \"src/**/*.test.ts\" --coverage",
    "test:watch": "wtr \"src/**/*.test.ts\" --watch"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.32",
    "@types/mocha": "^8.0.4",
    "@web/dev-server-esbuild": "^0.2.8",
    "@web/test-runner": "^0.9.13",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.0"
  },
  "keywords": [
    "wcom",
    "web-components",
    "helpers",
    "events",
    "decorator"
  ],
  "publishConfig": {
    "access": "public"
  }
}
